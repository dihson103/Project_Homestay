@page
@model HomestayWeb.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/Manager.css" rel="stylesheet" />
<link href="~/css/home.css" rel="stylesheet" />
<h1>Danh sách người dùng</h1>

<form class="form-inline search" method="post">
  <input type="text" asp-for="SearchDto.SearchValue" placeholder="Tìm kiếm người dùng" />
  <div class="form-group">
        <select class="form-control" asp-for="SearchDto.Role">
            <option value="ADMIN">ADMIN</option>
            <option value="USER">USER</option>
        </select>
    </div>
    <div class="form-group">
        <select class="form-control" asp-for="SearchDto.Status">
            <option value="true">ACTIVE</option>
            <option value="false">INACTIVE</option>
        </select>
    </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a class="btn_action" asp-page="Create">Thêm người dùng</a>
    <button id="button" onclick="htmlTableToExcel('xlsx')">Export HTML Table to EXCEL</button>
</p>
<table class="table" id="tblToExcl">
    <thead>
        <tr>
            <th>
               Tên tài khoản
            </th>
            <th>
               Email
            </th>
            <th>
               Vai trò
            </th>
            <th>
                Trạng thái
            </th>
            <th>
               Tên đầy đủ
            </th>
            <th>
                Giới tính
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @(item.Status ? "ACTIVE" : "INACTIVE")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                 @(item.Gender == true ? "Nam" : "Nữ")
            </td>

            <td>
                <div style="margin-top:5px;">
                      <a class="btn_action" asp-page="./Edit" asp-route-id="@item.UserId">Edit</a>
                </div>
                <div style="margin-top:5px;">
                     <a class="btn_action" asp-page="./Details" asp-route-id="@item.UserId">Details</a>

                </div>
                <div style="margin-top:5px;">
                     <a class="btn_action" style="color:orange" asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.User.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.User.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.User.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.User.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Next
</a>

<script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
<script>
    function htmlTableToExcel(type) {
        var data = document.getElementById('tblToExcl');
        var excludeColumns = [6];
        for (var i = 0; i < excludeColumns.length; i++) {
            var columnIndex = excludeColumns[i];

            // Lấy tất cả th và td của cột được xác định
            var cells = data.querySelectorAll('th:nth-child(' + (columnIndex + 1) + '), td:nth-child(' + (columnIndex + 1) + ')');

            // Lặp qua từng cell và kiểm tra sự tồn tại trước khi xóa
            for (var j = 0; j < cells.length; j++) {
                var cell = cells[j];
                if (cell && cell.parentNode) {
                    cell.parentNode.removeChild(cell);
                }
            }
        }

        var excelFile = XLSX.utils.table_to_book(data, { sheet: "sheet1" });
        XLSX.write(excelFile, { bookType: type, bookSST: true, type: 'base64' });
        XLSX.writeFile(excelFile, 'ExportedFile:HTMLTableToExcel.' + type);

        location.reload();
    }
</script>