@page
@model HomestayWeb.Pages.Profile.IndexModel
@{
}
<h1>Profile</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.UserId" />
            <input type="hidden" asp-for="Customer.Role" />
            <div class="form-group">
                <label asp-for="Customer.Fullname" class="control-label"></label>
                <input asp-for="Customer.Fullname" class="form-control" />
                <span asp-validation-for="Customer.Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Username" class="control-label"></label>
                <input asp-for="Customer.Username" class="form-control" readonly />
                <span asp-validation-for="Customer.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Role" class="control-label"></label>
                <input asp-for="Customer.Role" class="form-control" readonly />
                <span asp-validation-for="Customer.Role" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Customer.Password" class="control-label"></label>
                <input type="text" asp-for="Customer.Password" class="form-control" readonly  />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Customer.Status" class="control-label"></label>
                <input type="text" asp-for="Customer.Status" class="form-control" readonly />
                <span asp-validation-for="Customer.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Gender" class="control-label"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Customer.Gender" value="true" id="male" checked="@(Model.Customer.Gender == true ? "checked" : null)">
                    <label class="form-check-label" for="male">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Customer.Gender" value="false" id="female" checked="@(Model.Customer.Gender == false ? "checked" : null)">
                    <label class="form-check-label" for="female">
                        Female
                    </label>
                </div>
                <span asp-validation-for="Customer.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to home</a>
</div>

<script>
    var message = '@Model.Message'
    if(message){
        document.getElementById('notification').innerHTML = message
        document.getElementById('notification').hidden = false
    }
</script>
